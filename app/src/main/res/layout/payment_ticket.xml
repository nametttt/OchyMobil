<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="20dp"
    android:background="@drawable/btn_ticket_info_buy">

    <TextView
        android:id="@+id/passData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Выбор способа оплаты"/>



    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Заполните данные вручную или выберите данные добавленной карты из личного кабинета"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/settings"
        android:layout_height="wrap_content">

        <com.ochy.ochy.cod.custom_spinner
            android:id="@+id/cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ln">




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="или"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:background="@drawable/settings"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/cardnumb"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFF3E8"
                android:hint="Номер карты"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:paddingLeft="10dp"
                android:textSize="18dp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:background="@drawable/settings"
            android:layout_weight="0.5"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/carddate"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFF3E8"
                android:hint="Месяц/Год"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:paddingLeft="10dp"
                android:textSize="18dp" />

        </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:background="@drawable/settings"
                android:layout_weight="0.5"
                android:layout_marginLeft="15dp"

                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/cvc"
                    android:inputType="numberPassword"
                    android:maxLength="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFF3E8"
                    android:hint="CW/CVC"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:paddingLeft="10dp"
                    android:textSize="18dp" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="@drawable/settings"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/cardname"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFF3E8"
                android:hint="Имя владельца на латынице"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:paddingLeft="10dp"
                android:textSize="18dp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
