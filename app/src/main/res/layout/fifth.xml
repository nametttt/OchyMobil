<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bezh"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="10dp"
            android:layout_weight="0.3"
            android:background="@drawable/settings"
            android:orientation="vertical">
            <TextView
                android:height="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Почему оплата не проходит"
                android:textStyle="bold"
                android:textSize="18dp"
                />

            <TextView
                android:height="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="Иногда продавец отклоняет оплату, если карта выпущена в одной стране, а оплата совершается из другой. Это происходит из‑за антифрода — специальной системы, которая следит за подозрительными транзакциями и выявляет потенциально мошеннические."
                android:textSize="16dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:layout_marginVertical="20dp"
            android:padding="10dp"

            android:background="@drawable/settings"
            android:orientation="vertical">
            <TextView
                android:height="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Как купить лбготные билеты"
                android:textStyle="bold"
                android:textSize="18dp"
                />

            <TextView
                android:height="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="Чаще всего авиакомпании продают билеты со скидками для определённых категорий пассажиров: пенсионеров, школьников или студентов, пассажиров с инвалидностью или с дополнительными потребностями здоровья, многодетных семьей, а также жителей Дальнего Востока."
                android:textSize="16dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/settings"
            android:orientation="vertical">
            <TextView
                android:height="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Банковские транзакции"
                android:textStyle="bold"
                android:textSize="18dp"
                />

            <TextView
                android:height="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="Если вашу банковскую транзакцию посчитают подозрительной, продавец свяжется с вами и попросит документы, подтверждающие, что билет оплачиваете вы, а не мошенники. После проверки продавец одобрит оплату и вышлет билет, если всё в порядке. Если нет — заказ аннулируют, а деньги вернут вам на счёт."
                android:textSize="16dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>