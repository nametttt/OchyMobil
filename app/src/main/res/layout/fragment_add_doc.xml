<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bezh"
    tools:context=".ProfileFragment">


    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_docs_ico"
                    android:layout_gravity="center_vertical"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Это действительно удобно"
                        android:textColor="@color/black"

                        android:textStyle="bold"

                        android:textSize="18dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/add_docs"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:textAlignment="gravity"
                        android:textSize="16dp"/>
                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/addcard"

                android:layout_marginTop="40dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Данные пассажира"
                        android:textSize="18dp"
                        android:textStyle="bold"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/settings"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/cardname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#FFF3E8"
                            android:hint="Фамилия"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:paddingLeft="10dp"
                            android:textSize="18dp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/settings"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/cardnum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#FFF3E8"
                            android:hint="Имя"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:paddingLeft="10dp"
                            android:textSize="18dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/settings"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#FFF3E8"
                            android:hint="Отчество"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:paddingLeft="10dp"
                            android:textSize="18dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/settings"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#FFF3E8"
                            android:hint="Дата рождения"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:paddingLeft="10dp"
                            android:textSize="18dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/settings"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#FFF3E8"
                            android:hint="Гражданство"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:paddingLeft="10dp"
                            android:textSize="18dp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        >


                            <CheckBox
                                android:layout_weight="0.5"
                                android:id="@+id/carddate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:background="@drawable/background_left_rounded"
                                android:text="Мужчина"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textColorHint="@color/gray"
                                android:paddingLeft="10dp"

                                android:textStyle="normal"
                                android:textSize="18dp"
                                android:button="@null"
                                android:drawableLeft="@drawable/man_ico"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black" /> <!-- Черта между кнопками -->


                            <CheckBox
                                android:id="@+id/cardcvc"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_bottom_rounded"
                                android:text="Женщина"
                                android:button="@null"
                                android:paddingVertical="5dp"
                                android:textSize="18dp"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textColorHint="@color/gray"
                                android:paddingLeft="10dp"
                                android:drawableLeft="@drawable/not_man_ico"/>


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/settings"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/cardman"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#FFF3E8"
                            android:hint="Имя владельца на латынице"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:paddingLeft="10dp"
                            android:textSize="18dp" />

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/addcard"

                android:layout_marginTop="40dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Данные документа"
                        android:textSize="18dp"
                        android:textStyle="bold"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/settings"
                        android:layout_height="wrap_content">

                        <com.ochy.ochy.cod.custom_spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/settings"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#FFF3E8"
                            android:hint="Номер документа"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:paddingLeft="10dp"
                            android:textSize="18dp" />

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>




            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="40dp"
                android:text="Сохранить данные"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_marginBottom="40dp"
                android:background="@drawable/gradient_button"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>