<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bezh"
    tools:context=".ticketFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TableLayout
        android:id="@+id/table"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:background="@color/bezh"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:text="Выберите маршрут для покупки авиабилетов" />

        <TableLayout
            android:layout_width="wrap_content"
            android:background="@drawable/search"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:id="@+id/fromCity"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Казань"
                android:hint="Откуда - Казань"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/search"
                android:textColorHint="@color/hz"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginHorizontal="40dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <AutoCompleteTextView
                android:id="@+id/toCity"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/search"
                android:hint="Куда - Турция"
                android:textColorHint="@color/hz"

                android:layout_height="wrap_content"/>
        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:background="@drawable/search"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="wrap_content"
                android:background="@color/bezh"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/date_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="Даты"
                    android:textAllCaps="false"
                    android:textColor="@color/hz"
                    android:drawablePadding="15dp"
                    android:outlineProvider="none"
                    android:drawableLeft="@drawable/calendar"
                    android:padding="15dp"
                    android:background="@drawable/btncreugl"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/passajers_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="1 пассажир"
                    android:textAllCaps="false"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:drawablePadding="10dp"
                    android:outlineProvider="none"
                    android:drawableLeft="@drawable/userticket"
                    android:padding="15dp"
                    android:background="@drawable/btncreugl"/>

            </TableRow>

        </TableLayout>

    </TableLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/res"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="15dp"
            android:padding="5dp"
            android:visibility="gone"
            android:dividerHeight="10dp"
            android:divider="@color/bezh"
            android:background="@drawable/find_tickets_fragment"/>



    </LinearLayout>

    </ScrollView>

</RelativeLayout>