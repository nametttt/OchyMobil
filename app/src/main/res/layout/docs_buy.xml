<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/btn_ticket_info_buy">

        <TextView
            android:id="@+id/passData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Данные пассажира"/>

        <TextView
            android:id="@+id/pass_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="Взрослый"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Заполните данные вручную или выберите данные пассажира из личного кабинета."
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:background="@drawable/settings"
            android:layout_height="wrap_content">

            <com.ochy.ochy.cod.custom_spinner
                android:id="@+id/passagers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ln">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="или"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:background="@drawable/settings"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/docCitizen"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFF3E8"
                android:hint="Гражданство"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:paddingLeft="10dp"
                android:textSize="18dp" />

        </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/settings"
        android:layout_height="wrap_content">

        <com.ochy.ochy.cod.custom_spinner
            android:id="@+id/custom_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/settings"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/docnumb"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFF3E8"
            android:hint="Номер документа"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:paddingLeft="10dp"
            android:textSize="18dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/settings"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/docSurn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFF3E8"
            android:hint="Фамилия"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:paddingLeft="10dp"
            android:textSize="18dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/settings"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/docName"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFF3E8"
            android:hint="Имя"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:paddingLeft="10dp"
            android:textSize="18dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/settings"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/docPatr"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFF3E8"
            android:hint="Отчество"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:paddingLeft="10dp"
            android:textSize="18dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/settings"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/docBirth"
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFF3E8"
            android:hint="Дата рождения"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:paddingLeft="10dp"
            android:textSize="18dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        >


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radio"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/background_left_rounded"
                android:text="Мужчина"
                android:paddingVertical="5dp"
                android:textSize="18dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"
                android:button="@drawable/man_ico" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black" /> <!-- Черта между кнопками -->

            <RadioButton
                android:id="@+id/female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/background_bottom_rounded"
                android:text="Женщина"
                android:paddingVertical="5dp"
                android:textSize="18dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"
                android:button="@drawable/not_man_ico" />

        </RadioGroup>


    </LinearLayout>
    </LinearLayout>
</LinearLayout>
