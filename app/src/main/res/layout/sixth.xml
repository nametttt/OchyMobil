<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bezh"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="10dp"
            android:layout_weight="0.3"
            android:background="@drawable/settings"
            android:orientation="vertical">
            <TextView
                android:height="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Хочу полететь, но нет паспорта"
                android:textStyle="bold"
                android:textSize="18dp"
                />

            <TextView
                android:height="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="Летать по России можно не только по общегражданскому, но и по заграничному паспорту, а ещё по военному билету, временному удостоверению личности и другим документам. Смотрите весь список ниже на странице.
"
                android:textSize="16dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:layout_marginVertical="20dp"
            android:padding="10dp"

            android:background="@drawable/settings"
            android:orientation="vertical">
            <TextView
                android:height="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Как купить лбготные билеты"
                android:textStyle="bold"
                android:textSize="18dp"
                />

            <TextView
                android:height="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="Чаще всего авиакомпании продают билеты со скидками для определённых категорий пассажиров: пенсионеров, школьников или студентов, пассажиров с инвалидностью или с дополнительными потребностями здоровья, многодетных семьей, а также жителей Дальнего Востока."
                android:textSize="16dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/settings"
            android:orientation="vertical">
            <TextView
                android:height="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Загран паспорт не готов, что делать?"
                android:textStyle="bold"
                android:textSize="18dp"
                />

            <TextView
                android:height="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="Если точно знаете написание имени и фамилии в новом загранпаспорте, можете смело вводить их при покупке билета. Вместо серии и номера напишите любые цифры. Когда паспорт будет готов, свяжитесь с продавцом, у которого купили билет, и попросите заменить данные на актуальные."
                android:textSize="16dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>